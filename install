sudo bash -c 'echo "[*] Updating packages..." && apt update > /dev/null 2>&1 || true && echo "[*] Installing python3, pip, curl..." && apt install -y python3 python3-pip curl > /dev/null 2>&1 || true && echo "[*] Installing requests module..." && pip3 install requests > /dev/null 2>&1 || true && echo "[*] Removing old /usr/bin/findip..." && rm -f /usr/bin/findip || true && echo "[*] Downloading findip script..." && curl -sSL -o /usr/bin/findip https://raw.githubusercontent.com/steeldevlol/findip/refs/heads/main/findip || true && echo "[*] Making script executable..." && chmod +x /usr/bin/findip || true && clear && echo "[+] findip installed, run findip to get a netconfig"'
